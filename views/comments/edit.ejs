<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center;">
			Edit Comment
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/camps/<%=camp_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" name="comment[text]" value="<%=comment.text%>" class="form-control" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/camps">Go Back</a>
		</div>	
	</div>

<%- include("../partials/footer") %>