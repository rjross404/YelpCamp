<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center;">
			Add New Comment to <%=camp.name%>
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/camps/<%=camp._id%>/comments" method="POST">
				<div class="form-group">
					<input type="text" name="comment[text]" placeholder="text" class="form-control" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/camps">Go Back</a>	
		</div>	
	</div>

<%- include("../partials/footer") %>