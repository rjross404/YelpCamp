<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center;">
			Update <%=camp.name%>
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/camps/<%=camp._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" name="camp[name]" value="<%=camp.name%>" class="form-control" required>
				</div>
				<div class="form-group">
					<input type="number" name="camp[price]" value="<%=camp.price%>" class="form-control" required min="0.00" step="0.01">
				</div>
				<div class="form-group">
					<input type="text" name="camp[image]" value="<%=camp.image%>" class="form-control" required>
				</div>
				<div class="form-group">
					<input type="text" name="camp[desc]" value="<%=camp.desc%>" class="form-control" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/camps">Go Back</a>		
		</div>	
	</div>

<%- include("../partials/footer") %>